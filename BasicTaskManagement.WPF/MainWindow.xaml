<Window x:Class="BasicTaskManagement.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicTaskManagement.WPF"
        xmlns:models="clr-namespace:BasicTaskManagement.Core.DTO;assembly=BasicTaskManagement.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <local:BoolToYesNoConverter x:Key="booltoyesno" />
    </Window.Resources>
    <Grid>
        <Grid x:Name="ContainerGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <ListView x:Name="MainList" ItemsSource="{Binding Path=TaskGroups}" SelectionMode="Single" SelectionChanged="MainList_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:TaskGroupSummaryDTO}">
                                    <StackPanel Orientation="Vertical" Margin="2">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Stretch" />
                                        <TextBlock Text="{Binding IsFavorite, Converter={StaticResource booltoyesno}, StringFormat=Favorite? {0}}" />
                                        <TextBlock Text="{Binding CountOfTaskItems, StringFormat=Count of task items not complete: {0}}" />
                                    </StackPanel>
                                </DataTemplate>                                
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView x:Name="SubList" Grid.Column="1" ItemsSource="{Binding Path=TaskItemsForSelectedTaskGroup}" SelectionMode="Single" SelectionChanged="SubList_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:TaskItemDTO}">
                                    <StackPanel Orientation="Vertical" Margin="2">
                                        <TextBlock Text="{Binding Name}" x:Name="NameText" />
                                        <TextBlock Text="{Binding DueDate, StringFormat=d}" />
                                    </StackPanel>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                            <Setter Property="TextDecorations" TargetName="NameText" Value="Strikethrough" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsImportant}" Value="True">
                                            <Setter Property="FontWeight" TargetName="NameText" Value="Bold" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid/>
            <Grid x:Name="Details" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Name" />
                <Label Grid.Row="1" Content="Notes" />
                <Label Grid.Row="2" Content="Important?"/>
                <Label Grid.Row="3" Content="Complete?" />
                <Label Grid.Row="4" Content="Due Date" />
                <Label Grid.Row="5" Content="Completed Date" />
                <Label Grid.Row="6" Content="Date Created" />
                <Label Grid.Row="7" Content="Date Updated" />
                <TextBox Text="{Binding SelectedTaskItem.Name}" IsEnabled="{Binding IsEditingTask}" Grid.Column="1" />
                <TextBox Text="{Binding SelectedTaskItem.Notes}" IsEnabled="{Binding IsEditingTask}" Grid.Column="1" Grid.Row="1" />
                <CheckBox IsChecked="{Binding SelectedTaskItem.IsImportant}" IsEnabled="{Binding IsEditingTask}" Grid.Column="1" Grid.Row="2" />
                <CheckBox IsChecked="{Binding SelectedTaskItem.IsComplete}" IsEnabled="{Binding IsEditingTask}" Grid.Column="1" Grid.Row="3" />
                <DatePicker SelectedDate="{Binding SelectedTaskItem.DueDate}" IsEnabled="{Binding IsEditingTask}" Grid.Column="1" Grid.Row="4" />
                <DatePicker SelectedDate="{Binding SelectedTaskItem.CompletedDate}" IsEnabled="{Binding IsEditingTask}" Grid.Column="1" Grid.Row="5" />
                <DatePicker SelectedDate="{Binding SelectedTaskItem.CreateDate}" IsEnabled="{Binding IsEditingTask}" Grid.Column="1" Grid.Row="6" />
                <DatePicker SelectedDate="{Binding SelectedTaskItem.UpdateDate}" IsEnabled="{Binding IsEditingTask}" Grid.Column="1" Grid.Row="7" />
            </Grid>
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5,5,5,5">
                <Button x:Name="AddFolderButton" Content="Add Folder" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0" />
                <StackPanel Orientation="Horizontal">
                    <Button IsEnabled="{Binding IsTaskGroupSelected}" x:Name="RenameFolderButton" Click="RenameFolderButton_Click" Content="Rename Selected Folder" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0" />
                    <Button IsEnabled="{Binding IsRenamingFolder}" Click="CancelAddFolderButton_Click" x:Name="CancelAddFolderButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,0,0" />
                </StackPanel>
                <Button IsEnabled="{Binding IsTaskGroupSelected}" Click="DeleteFolderButton_Click" x:Name="DeleteFolderButton" Content="Delete Selected Folder" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0" />
            </StackPanel>
            <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Vertical" Margin="5,5,5,5">
                <Button IsEnabled="{Binding IsTaskGroupSelected}" x:Name="AddTaskButton" Content="Add Task" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0" />
                <StackPanel Orientation="Horizontal">
                    <Button IsEnabled="{Binding IsTaskItemSelected}" Click="EditTaskButton_Click" x:Name="EditTaskButton" Content="Edit Task" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0" />
                    <Button IsEnabled="{Binding IsEditingTask}" Click="CancelEditTaskButton_Click" x:Name="CancelEditTaskButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,0,0" />
                </StackPanel>
                <Button IsEnabled="{Binding IsTaskItemSelected}" x:Name="DeleteTaskButton" Content="Delete Task" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0" />
            </StackPanel>
            <CheckBox Grid.Column="1" Content="Show Complete?" HorizontalAlignment="Center" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
